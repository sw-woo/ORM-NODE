        <!--우측 콘텐츠 영역 -->
        <form action="/article/create" method="post" id="articleForm">
          <div class="wrapper wrapper-content">
            <div class="ibox-content m-b-sm border-bottom">
              <div class="row">
                <div class="col-4">
                  <div class="form-group">
                    <label class="control-label">게시판</label>
                    <select
                      name="boardTypeCode"
                      id="boardTypeCode"
                      class="form-control"
                    >
                      <option value="0">선택</option>
                      <option value="1">공지게시판</option>
                      <option value="2">기술블로깅</option>
                    </select>
                  </div>
                </div>
              </div>
              <!-- 글제목 -->
              <div class="row">
                <div class="col-sm-12">
                  <div class="form-group">
                    <label class="control-label">글제목</label>
                    <input
                      type="text"
                      name="title"
                      id="title"
                      class="form-control"
                    />
                  </div>
                </div>
              </div>
              <!-- 글내용 -->
              <div class="row">
                <div class="col-sm-12">
                  <div class="form-group">
                    <label class="control-label">글내용</label>
                    <textarea
                      class="form-control"
                      name="contents"
                      id="contents"
                      rows="10"
                      cols="5"
                    ></textarea>
                  </div>
                </div>
              </div>
              <!-- 게시글유형, 게시여부, 등록자 입력영역 -->
              <div class="row">
                <div class="col-sm-4">
                  <div class="form-group">
                    <label class="control-label">게시글유형</label>
                    <select
                      name="articleTypeCode"
                      id="articleTypeCode"
                      class="form-control"
                    >
                      <option value="0">선택</option>
                      <option value="1">상단고정게시글</option>
                      <option value="2">일반게시글</option>
                    </select>
                  </div>
                </div>

                <div class="col-sm-4">
                  <div class="form-group">
                    <label class="control-label">게시여부</label>
                    <select
                      name="isDisplayCode"
                      id="isDisplayCode"
                      class="form-control"
                    >
                      <option value="0">선택</option>
                      <option value="Y">게시함</option>
                      <option value="N">게시안함</option>
                    </select>
                  </div>
                </div>

                <div class="col-sm-4">
                  <div class="form-group">
                    <label class="control-label">작성자명</label>
                    <input
                      type="text"
                      name="register"
                      id="register"
                      class="form-control"
                    />
                  </div>
                </div>
                <div class="col-sm-12 text-center">
                  <button type="submit" class="btn btn-primary">저장</button>
                  <a href="/article/list" class="btn btn-info">목록</a>
                </div>
              </div>
            </div>
          </div>
        </form>

